<table>
  <% @book.book_comments.each do |book_comment| %>
    <tr>
      <td><%= link_to user_path(book_comment.user) do %>
          <%= attachment_image_tag book_comment.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %><br />
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <% if book_comment.user_id == current_user.id %>
        <td><%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment), method: :delete, class:'btn btn-sm btn-danger' %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<%= form_with(model:[@book, @book_comment], local:true) do |f| %>
  <div class="form-group">
    <%= f.label :comment, 'コメント' %>
    <%= f.text_area :comment, rows:'5', class:'form-control book_comment' %>
  </div>
  <div class="form-group">
    <%= f.submit '送信' %>
  </div>
<% end %>