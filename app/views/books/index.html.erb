<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.email %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.email %></th>
            </tr>
          </tbody>
        </table>

        <div class="row">
          <%= link_to "", "/", class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>
        </div>

        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local: true do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class:'form-control book_title' %>
          </div>
          <div class="form-group">
            <%= f.label :opinion %>
            <%= f.text_area :body, class:'form-control book_body' %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class:'btn btn-suc' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>